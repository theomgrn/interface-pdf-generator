<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My Application{% endblock %}</title>
    <style>
        .top-right {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body>
<nav>
    <ul>
        <li><a href="{{ path('home') }}">Accueil</a></li>
        <li><a href="{{ path('app_generate_pdf') }}">Générer PDF</a></li>
        <li><a href="{{ path('history') }}">Historique</a></li>
        <li><a href="{{ path('subscription') }}">Abonnement</a></li>

    </ul>
</nav>
<div class="top-right">
    {% if app.user %}
        <a href="{{ path('user_page') }}" class="btn btn-primary">Mon compte</a>
        <a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
    {% else %}
        <a href="{{ path('app_register') }}" class="btn btn-primary">Register</a>
        <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
    {% endif %}
</div>
<div>
    {% block body %}{% endblock %}
</div>
</body>
</html>
