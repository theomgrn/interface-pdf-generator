<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My Application{% endblock %}</title>
    <style>

        @import url('https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap');

        h1 {
            font-family: 'Archivo Black', sans-serif;
            font-size: 3em;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }

        .error {
            color: #f14f4f;
        }

        nav {
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1;
            height: 20vh;
        }

        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            text-align: left;
        }

        nav ul li {
            display: inline-block;
            margin-right: 20px;
        }

        nav ul li a {
            text-decoration: none;
            color: #fff;
            padding: 10px 20px;
            display: inline-block;
            position: relative;
            transition: color 0.3s;
            text-transform: uppercase;
        }

        nav ul li a::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 3px;
            background-color: #282828;
            bottom: 0;
            left: 0;
            transform: scaleX(0);
            transition: transform 0.3s ease-in-out;
            transform-origin: bottom right;
        }

        nav ul li a:hover::before {
            transform: scaleX(1);
            transform-origin: bottom left;
        }

        .top-right {
            position: absolute;
            top: 2vh;
            right: 10px;
            z-index: 999;
        }
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #282828;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #000000;
        }
    </style>
</head>
<body>
<div class="margin-bot">
<nav>
    <ul>
        <li><a href="{{ path('home') }}">Accueil</a></li>
        <li><a href="{{ path('app_generate_pdf') }}">Générer PDF</a></li>
        <li><a href="{{ path('history') }}">Historique</a></li>
        <li><a href="{{ path('subscription') }}">Abonnement</a></li>
    </ul>
</nav>
<div class="top-right">
    {% if app.user %}
        <a href="{{ path('user_page') }}" class="btn btn-primary">COMPTE</a>
        <a href="{{ path('app_logout') }}" class="btn btn-primary">DECONNEXION</a>
    {% else %}
        <a href="{{ path('app_register') }}" class="btn btn-primary">INSCRIPTION</a>
        <a href="{{ path('app_login') }}" class="btn btn-primary">CONNEXION</a>
    {% endif %}
</div>
<div>
    {% block body %}{% endblock %}
</div>
</div>
</body>
</html>
